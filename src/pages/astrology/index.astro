---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";
import CardGrid from "../../components/CardGrid.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("astrology", ({ data }) => !data.draft)).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<BaseLayout title="占星" description="關於占星的文章">
  <h1 class="text-3xl font-bold mb-8">占星</h1>
  {
    posts.length === 0 ? (
      <p class="text-base-content/60">尚無文章，敬請期待。</p>
    ) : (
      <CardGrid>
        {posts.map((post) => (
          <PostCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            href={`/astrology/${post.id}`}
            heroImage={post.data.heroImage}
            tags={post.data.tags}
          />
        ))}
      </CardGrid>
    )
  }
</BaseLayout>

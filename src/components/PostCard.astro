---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  href: string;
  heroImage?: string;
  tags?: string[];
}

const { title, description, pubDate, href, heroImage, tags = [] } = Astro.props;
---

<a
  href={href}
  class="card bg-base-100 shadow-sm hover:shadow-md transition-shadow duration-200"
>
  {
    heroImage && (
      <figure>
        <img src={heroImage} alt={title} class="w-full h-48 object-cover" />
      </figure>
    )
  }
  <div class="card-body">
    <h2 class="card-title text-lg">{title}</h2>
    <p class="text-sm text-base-content/70">{description}</p>
    <div class="card-actions justify-between items-center mt-2">
      <time class="text-xs text-base-content/50" datetime={pubDate.toISOString()}>
        {
          pubDate.toLocaleDateString("zh-Hant", {
            year: "numeric",
            month: "short",
            day: "numeric",
          })
        }
      </time>
      {
        tags.length > 0 && (
          <div class="flex gap-1">
            {tags.slice(0, 2).map((tag) => (
              <span class="badge badge-outline badge-sm">{tag}</span>
            ))}
          </div>
        )
      }
    </div>
  </div>
</a>
